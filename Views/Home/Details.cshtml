@model futdex.Models.Time

@{
    ViewData["Title"] = "Detalhes do Time";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
        color: #f5f5f5;
    }
    .image-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card {
        background-image: ;
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
        color: #f5f5f5;
        backdrop-filter: blur(6px);
    }

    .card-title {
        font-size: 2rem;
        font-weight: 600;
        color: #fff;
        text-shadow: 0 1px 6px rgba(0, 0, 0, 0.4);
    }

    .btn-outline-secondary {
        color: #fff;
        border-color: #ccc;
    }

    .btn-outline-secondary:hover {
        background-color: #1a661a;
        color: #fff;
        border-color: #1a661a;
    }

    strong {
        color: #b3ffb3;
    }

    .team-logo {
        display: block;
        width: 200px;
        height: 200px;
        object-fit: contain;
        border-radius: 12px;
        padding: 8px;
    }

    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: blur(3px) brightness(0.9);
        z-index: -2;
        border-radius: 12px;
    }

</style>

<img class="image-background" src="~/img/fundo.jpg" alt="">

<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">&larr; Voltar para lista</a>
</div>

<div class="card mb-4 p-3">

<video autoplay muted loop class="video-background">
    <source src="/videos/banner-chute.mp4" type="video/mp4">
    Seu navegador não suporta vídeos HTML5.
</video>
    <div class="row g-0 align-items-center">
        <div class="col-md-4 d-flex align-items-center p-4">
            <div class="logo-container">
                <img src='~/@Model.LogoUrl' alt="@Model.Nome logo" class="team-logo"
                    onerror="this.onerror=null;this.src='/images/no-logo.png';" />
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text mb-1"><strong>Campeonato:</strong> @Model.Campeonato?.Nome</p>
                <p class="card-text mb-1"><strong>Cidade:</strong> @Model.Cidade</p>
                <p class="card-text mb-1"><strong>Estado:</strong> @Model.Estado</p>
                <p class="card-text mb-1"><strong>Estádio:</strong> @Model.Estadio</p>
                <p class="card-text mb-1"><strong>Ano de Fundação:</strong> @Model.AnoFundacao</p>
                <p class="card-text mb-1"><strong>Técnico:</strong> @Model.Tecnico</p>
            </div>
        </div>
    </div>
</div>